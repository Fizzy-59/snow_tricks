{% extends 'base.html.twig' %}

{% block title %}Edit Video{% endblock %}

{% block body %}

    <div class="container">

    <div class="col-sm">
        <div class="card" style="width: 18rem;">
            <iframe width="560" height="315" src=" {{ video.url }} "
                    title="YouTube video player" frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen>
            </iframe>
            <div class="card-body">
            </div> {# card-body #}
        </div> {# col #}
    </div> {# card #}

    {{ form_start(form) }}
    {{ form_row(form.url) }}

    <button type="submit" class="btn btn-success btn-lg col-12"><i class="fas fa-check"></i> UPDATE VIDEO</button>

    {{ form_end(form) }}

    </div> {# container #}

{% endblock %}