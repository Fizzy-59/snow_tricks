{% extends 'base.html.twig' %}

{% block title %}Edit Main Image{% endblock %}

{% block body %}

    <div class="container">

        <div class="row">
            <div class="col-sm">
                <div class="card" style="width: 18rem;">
                    <img src="{{ asset(image.pathThumbnail ~ '/' ~ image.name) }}"
                         class="card-img-top" alt="{{ image.caption }}">
                    <div class="card-body">
                    </div> {# card-body #}
                </div> {# col #}
            </div> {# card #}
        </div> {# row #}

        {{ form_start(form) }}
        {{ form_row(form.caption) }}

        <button type="submit" class="btn btn-success btn-lg col-12"><i class="fas fa-check"></i>UPDATE MAIN IMAGE
        </button>

        {{ form_end(form) }}

    </div> {# container #}
{% endblock %}