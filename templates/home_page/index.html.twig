{% extends 'base.html.twig' %}

{% block title %}Hello HomePageController!{% endblock %}

{% block body %}

    <a href="{{ path('trick_create') }}"><p class="card-text">"Create trick"</p></a>

    <header style="background-image: url('https://via.placeholder.com/700')">
        <div class="contents-header text-center">
            <h1 class="header-title text-center">SnowTricks</h1>
            <div style="margin-bottom: 3rem;" class="text-center">
            </div>
            <div class="sub-title">
                Lorem ipsum dolor sit amet, distinctio earum porro explicabo qui culpa, necessitatibus minus dolore
                tenetur beatae ratione!
            </div>
        </div>
    </header>

    <div class="container">
        <div class="row">

            {% for trick in tricks %}
                <div class="col-sm">
                    <div class="card" style="width: 18rem;">
                        <img src="{{ asset(trick.mainImage.pathThumbnail ~ '/' ~ trick.mainImage.name) }}"
                             class="card-img-top" alt="{{ trick.mainImage.caption }}">
                        <div class="card-body">
                            <a href="{{ path('trick', {'id': trick.id }) }}"><p class="card-text">{{ trick.name }}</p>
                            </a>
                            <a href="{{ path('trick_edit', {'id': trick.id }) }}"><p class="card-text">Edit</p></a>
                        </div> {# card-body #}
                    </div> {# card #}
                </div>  {# col #}
            {% endfor %}

        </div> {# row #}
    </div> {# container #}

{% endblock %}
