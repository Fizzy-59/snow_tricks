{% for image in trick.images %}
    {% if image.id != trick.mainImage.id %}
        <div class="col">
            <div class="card-top" style="width: 20rem; height: 15rem; border: white">

                {% if app.user %}
                    <div class="actions">
                        <a href="{{ path('image_edit', {'id': image.id} ) }}">✏ </a>️
                        <a href="{{ path('image_delete', {'id': image.id} ) }}">🗑️️</a>
                    </div>
                {% endif %}

                <img src="{{ asset(image.pathThumbnail ~ '/' ~ image.name) }}" class="card-img-top"
                     alt="Image of Trick">

            </div> {# card #}
        </div> {# col #}
    {% endif %}
{% endfor %}